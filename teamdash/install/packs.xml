	<!-- Installable package for team leader tools -->
        <pack name="Tools for Team Leaders" id="teamTools" required="no" 
              preselected="no">
            <description>Tools enabling team leaders to create and manage team projects.</description>

            <file targetdir="$INSTALL_PATH" override="true" 
	          src="${teamdash.dir}/${teamProcess.zip}"/>
            <file targetdir="$INSTALL_PATH" override="true" 
	          src="${teamdash.dir}/TeamTools.jar"/>

            <file targetdir="$DATA_PATH/teaminstance" override="true"
                  src="${teamdash.dir}/install/teamicon.ico"/>
            <file targetdir="$DATA_PATH/teaminstance" override="true"
                  src="${teamdash.dir}/install/icon32.gif"/>

            <file targetdir="$DATA_PATH/teaminstance" override="false"
                  src="${teamdash.dir}/install/pspdash.ini" os="windows"/>
            <file targetdir="$DATA_PATH/teaminstance" override="false"
                  src="${teamdash.dir}/install/.pspdash" os="unix"/>

            <file targetdir="$DATA_PATH/teaminstance" override="false"
                  src="${teamdash.dir}/install/run-dash.sh"/>
            <parsable targetfile="$DATA_PATH/teaminstance/run-dash.sh"/>
            <executable targetfile="$DATA_PATH/teaminstance/run-dash.sh"
	          stage="never">
	        <os family="unix"/>
	    </executable>

        </pack>
