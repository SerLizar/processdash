    <property name="15.bootclasspath" value="${java.home.15}/jre/lib/rt.jar"/>
    <available property="have15home" file="${15.bootclasspath}"/>
    <fail unless="have15home" message="To test for compatibility with Java 1.5, you must edit build.properties and specify a value for the java.home.15 property."/>

