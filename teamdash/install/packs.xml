	<!-- Installable package for team leader tools -->
        <pack name="Tools for Team Leaders" id="teamTools" required="no" 
              preselected="no">
            <description>Tools enabling team leaders to create and manage team projects.</description>

            <file targetdir="$INSTALL_PATH" override="true"
                  src="${teamdash.dir}/install/teamicon.ico"/>
            <singlefile target="$TEAM_DATA_PATH/icon.ico" override="false"
                  src="${teamdash.dir}/install/teamicon.ico"/>

            <file targetdir="$TEAM_DATA_PATH" override="false"
                  src="${teamdash.dir}/install/pspdash.ini" os="windows"/>
            <file targetdir="$TEAM_DATA_PATH" override="false"
                  src="${teamdash.dir}/install/.pspdash" os="unix"/>

            <!-- Create Team Dashboard application on Mac OS X --> 
            <fileset targetdir="$MAC_APPL/Team Dashboard.app"
                  dir="${teamdash.dir}/install/team_dash_app" override="true">
                <os name="Mac OS X"/>
                <include name="Contents/"/>
            </fileset>
            <parsable targetfile="$MAC_APPL/Team Dashboard.app/Contents/Info.plist">
                <os name="Mac OS X"/>
            </parsable>
            <parsable targetfile="$MAC_APPL/Team Dashboard.app/Contents/Resources/dataLocation.txt">
                <os name="Mac OS X"/>
            </parsable>
            <executable targetfile="/Applications/Team Dashboard.app/Contents/MacOS/JavaApplicationStub" stage="never">
	        <os name="Mac OS X"/>
	    </executable>

            <!-- Create Quick Launcher application on Mac OS X --> 
            <fileset targetdir="$MAC_APPL/Process Dashboard Quick Launcher.app"
                  dir="${teamdash.dir}/install/launcher_app" override="true">
                <os name="Mac OS X"/>
                <include name="Contents/"/>
            </fileset>
            <parsable targetfile="$MAC_APPL/Process Dashboard Quick Launcher.app/Contents/Info.plist">
                <os name="Mac OS X"/>
            </parsable>
            <executable targetfile="/Applications/Process Dashboard Quick Launcher.app/Contents/MacOS/JavaApplicationStub" stage="never">
	        <os name="Mac OS X"/>
	    </executable>

            <file targetdir="$TEAM_DATA_PATH" override="false"
                  src="${teamdash.dir}/install/run-dash.sh"/>
            <parsable targetfile="$TEAM_DATA_PATH/run-dash.sh"/>
            <executable targetfile="$TEAM_DATA_PATH/run-dash.sh"
	          stage="never">
	        <os family="unix"/>
	    </executable>

        </pack>
